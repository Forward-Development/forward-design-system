{
  "name": "@forward-protocol/uikit",
  "version": "0.0.1",
  "description": "uikit",
  "author": "Pai Narawit",
  "license": "MIT",
  "keywords": [
    "design-system",
    "tailwindcss",
    "components",
    "ui-library",
    "component",
    "framework",
    "tailwind",
    "theming",
    "postcss",
    "design",
    "css",
    "ui"
  ],
  "main": "src/index.js",
  "typings": "src/index.js",
  "files": [
    "src/lib/**/*.js",
    "dist/*.js",
    "dist/{themes,full}.css",
    "src/index.js",
    "src/colors/*.js"
  ],
  "browserslist": [
    "> 7%"
  ],
  "publishConfig": {
    "access": "public",
    "branches": [
      "master"
    ]
  },
  "scripts": {
    "prebase": "postcss --config src/base src/base/*.css --base src --dir dist",
    "base": "cat dist/base/*.css > dist/base.css",
    "clean": "rm -rf .turbo && rm -rf dist && rm -rf node_modules",
    "postbase": "prejss-cli dist/base.css --format commonjs",
    "components": "postcss --config src/components src/components/**/*.css --base src --dir dist",
    "merge:components": "cat dist/components/*.css > dist/components.css",
    "prejss": "prejss-cli dist/{components,}.css --format commonjs",
    "themes": "postcss src/themes/index.css -o dist/themes.css --config src/themes",
    "full": "postcss src/full/index.css -o dist/full.css --config src/full",
    "postfull": "lightningcss --minify --targets '> 7%' dist/full.css -o dist/full.css",
    "build": "npm run base && npm run components && npm run merge:components && npm run prejss && npm run themes && npm run full",
    "install:docs": "cd src/docs && npm install",
    "dev:component": "npm run components && npm run merge:components && npm run prejss && npm run full",
    "dev": "nodemon -w src/components -e css --exec \"pnpm dev:component\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "playground": "cd src/experiments/playground && npm run dev",
    "release": "rm -f package-lock.json && standard-version",
    "release:patch": "rm -f package-lock.json && standard-version --release-as patch",
    "release:minor": "rm -f package-lock.json && standard-version --release-as minor",
    "release:major": "rm -f package-lock.json && standard-version --release-as major"
  },
  "devDependencies": {
    "@parcel/css-cli": "1.5.0",
    "@types/css-selector-tokenizer": "^0.7.1",
    "@vitest/ui": "^0.7.10",
    "autoprefixer": "10.0.4",
    "c8": "^7.11.0",
    "color-contrast-checker": "^2.1.0",
    "lightningcss-cli": "^1.16.0",
    "nodemon": "^2.0.20",
    "postcss-cli": "8.3.0",
    "postcss-import": "13.0.0",
    "postcss-nested": "5.0.1",
    "prejss-cli": "0.3.3",
    "standard-version": "^9.5.0",
    "vitest": "^0.7.10"
  },
  "dependencies": {
    "color": "^4.2",
    "css-selector-tokenizer": "^0.8.0",
    "postcss-js": "^4.0.0",
    "tailwindcss": "^3"
  },
  "peerDependencies": {
    "autoprefixer": "^10.0.2",
    "postcss": "^8.1.6"
  }
}