{
  "scripts": {
    "lint": "eslint \"*/**/*.{js,ts,tsx}\" --quiet --fix",
    "postinstall": "lerna exec -- yarn",
    "bootstrap": "lerna add @forward-ui/core --scope=@forward-ui/site && lerna bootstrap",
    "dev": "concurrently \"yarn dev:ui-core\" \"yarn dev:ui-site\"",
    "dev:ui-core": "lerna exec --scope=@forward-ui/core -- yarn start",
    "dev:ui-site": "lerna exec --scope=@forward-ui/site -- yarn start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "name": "forward-design-system"
}
